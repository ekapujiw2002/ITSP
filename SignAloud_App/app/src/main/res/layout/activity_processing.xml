<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.gmail.saqib1707.signaloud.ProcessingActivity"
    android:background="#277448">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView.receivedmessage"
        android:textSize="25dp"
        android:background="#90f2a8"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Listening"
        android:id="@+id/button.startlistening"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Listening"
        android:id="@+id/button.stoplistening"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button.startlistening"
        android:layout_alignStart="@+id/button.startlistening" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestured Speech"
        android:id="@+id/textView"
        android:layout_above="@+id/textView.receivedmessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:textColor="#faf3f3"
        android:textAlignment="center" />

</RelativeLayout>
